<UserControl x:Class="Booklist.View.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booklist.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1100">
    <Grid>
        <Grid Background="#17171a" Height="35" VerticalAlignment="Top">
            <Border BorderBrush="#333" BorderThickness="0 1"/>
            <Grid Margin="180 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock Foreground="White" Text="Name" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" FontFamily="Segoe UI Black" Margin="10"/>
                </Grid>
                <Grid Grid.Column="1">
                    <TextBlock Foreground="White" Text="Author" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" FontFamily="Segoe UI Black" Margin="10"/>
                </Grid>
                <Grid Grid.Column="2">
                    <TextBlock Foreground="White" Text="Pages" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" FontFamily="Segoe UI Black" Margin="10"/>
                </Grid>
                <Grid Grid.Column="3">
                    <TextBlock Foreground="White" Text="Date" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" FontFamily="Segoe UI Black" Margin="10"/>
                </Grid>
                <Grid Grid.Column="4">
                    <TextBlock Foreground="White" Text="Mark" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" FontFamily="Segoe UI Black" Margin="10"/>
                </Grid>
            </Grid>
        </Grid>
        <ListView ItemsSource="{Binding Books}" Background="Transparent" BorderThickness="0" Margin="0 35 0 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid  Margin="60 0 0 0">
                        <Border BorderThickness="0 0 0 1" BorderBrush="#333"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Ellipse Height="120" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Stroke="#FF4A53FF">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding PathPhoto}" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                            <WrapPanel Grid.Column="1" Orientation="Vertical" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border Background="Gray" CornerRadius="5" HorizontalAlignment="Left" Padding="10 2 10 2">
                                    <TextBlock Foreground="White" Text="{Binding Path=Name}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </WrapPanel>
                            <WrapPanel Grid.Column="2" Orientation="Vertical" Margin="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Border Background="Gray" CornerRadius="5" HorizontalAlignment="Left" Padding="10 2 10 2">
                                    <TextBlock Foreground="White" Text="{Binding Path=Author}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 10 0"/>
                                </Border>
                            </WrapPanel>
                            <Grid Grid.Column="3">
                                <TextBlock Foreground="White" Text="{Binding Path=Pages}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 10 0"/>
                            </Grid>
                            <Grid Grid.Column="4">
                                <TextBlock Foreground="White" Text="{Binding Path=Date}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 10 0"/>
                            </Grid>
                            <Grid Grid.Column="5">
                                <TextBlock Foreground="White" Text="{Binding Path=Mark}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 10 0"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</UserControl>
